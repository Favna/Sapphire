{
    "compilerOptions": {
		"target": "ES2020",
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"module": "commonjs",
		"moduleResolution": "node",
		"paths": {
			"@utils/*": ["lib/util/*"],
			"@lib/*": ["lib/*"],
			"@root/*": ["*"]
		},
		"composite": true,
		"declaration": true,
		"removeComments": true,
		"sourceMap": true,
		"inlineSources": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	}
}